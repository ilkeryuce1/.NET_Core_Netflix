@model EntityLayer.Concrete.Movie


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutMovie.cshtml";

}


<div class="">
    <section id="browse-dashboard" class=" d-flex direction-column flex-start middle-align">
        <div>
            <!--trailer video-->
            <video class="hero-background-image" id="hero-video"
                   poster="@Html.DisplayNameFor(model => model.CoverPhotoLink)">
                <source src="@Html.DisplayNameFor(model => model.TrailerLink)"
                        type="video/mp4">
                Your browser does not support the video tag.
            </video>

            <!--left shadow-->
            <div class="shadow-layer"></div>
        </div>

        <div class="container text-container" style="z-index: 5;">
            <div class="contentlogo">
                <br />
                <br />
                <br />
                <img class="show-logo" />
                <h3>@Html.DisplayNameFor(model => model.MovieName)</h3>
            </div>

            </section>






