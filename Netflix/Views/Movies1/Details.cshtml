        <div class="movierelease">
            <span class="year">
                @Html.DisplayNameFor(model => model.MovieYear.Year)

            </span>
            <span class="rating">
                10
            </span>
            <span class="timeduration">
                **
            </span>
        </div>
        <div class="description">
            @Html.DisplayNameFor(model => model.Description)
        </div>
        <div class="castinformation">
            <p><span class="name">Director:</span> Netflix</p>
